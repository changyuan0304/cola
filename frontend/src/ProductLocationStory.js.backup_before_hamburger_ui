    const file = e.target.files[0];
    if (file && file.name.endsWith('.csv')) {
      setSelectedFile(file);
    } else {
      alert('è«‹é¸æ“‡ CSV æª”æ¡ˆ');
      e.target.value = '';
    }
  };

  // ä¸Šå‚³ CSV æª”æ¡ˆ
  const handleUploadCSV = async () => {
    if (!selectedFile) {
      alert('è«‹å…ˆé¸æ“‡ CSV æª”æ¡ˆ');
      return;
    }

    setUploading(true);
    setUploadResults(null);
    setShowUploadModal(true);

    try {
      const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';
      const formData = new FormData();
      formData.append('csvFile', selectedFile);

      const response = await fetch(`${apiUrl}/api/csv-import/upload`, {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        setUploadResults(data);
        // é‡æ–°è¼‰å…¥æ–‡ç« åˆ—è¡¨
        await loadArticlesFromSupabase();
        alert(`æˆåŠŸåŒ¯å…¥ ${data.processedCount} ç¯‡æ–‡ç« ï¼`);
      } else {
        throw new Error(data.message || 'ä¸Šå‚³å¤±æ•—');
      }
    } catch (error) {
      console.error('CSV ä¸Šå‚³å¤±æ•—:', error);
      alert(`ä¸Šå‚³å¤±æ•—: ${error.message}`);
      setUploadResults({
        success: false,
        message: error.message
      });
    } finally {
      setUploading(false);
      setSelectedFile(null);
      // æ¸…ç©ºæª”æ¡ˆè¼¸å…¥
      const fileInput = document.getElementById('csv-file-input');
      if (fileInput) fileInput.value = '';
    }
  };

  // çˆ¬å–ç†±é–€è¡Œç¨‹
  const handleFetchPopularTours = async () => {
    setFetchingTours(true);
    setShowTours(true);

    try {
      const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';

      // è¨­å®š 120 ç§’ timeoutï¼ˆçˆ¬èŸ²éœ€è¦ç´„ 60 ç§’ï¼‰
      const controller = new AbortController();
      const timeoutId = setTimeout(() => controller.abort(), 120000);

      const response = await fetch(`${apiUrl}/api/product-location-story/fetch-popular-tours`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        signal: controller.signal
      });

      clearTimeout(timeoutId);

      const data = await response.json();

      if (data.success) {
        // åˆä½µæ˜“éŠç¶²å’Œæ±å—æ—…éŠçš„è¡Œç¨‹
        const allTours = [
          ...(data.eztravel || []).map(tour => ({ ...tour, source: 'æ˜“éŠç¶²' })),
          ...(data.settour || []).map(tour => ({ ...tour, source: 'æ±å—æ—…éŠ' }))
        ];
        setPopularTours(allTours);
        console.log(`æˆåŠŸç²å– ${data.totalCount} å€‹ç†±é–€è¡Œç¨‹ (æ˜“éŠç¶²: ${data.eztravel?.length || 0}, æ±å—æ—…éŠ: ${data.settour?.length || 0})`);
      } else {
        throw new Error(data.message || 'ç²å–å¤±æ•—');
      }
    } catch (error) {
      if (error.name === 'AbortError') {
        console.error('çˆ¬å–è¶…æ™‚ï¼ˆè¶…é 2 åˆ†é˜ï¼‰');
        alert('çˆ¬å–è¶…æ™‚ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚é€™å€‹æ“ä½œé€šå¸¸éœ€è¦ç´„ 1 åˆ†é˜ã€‚');
      } else {
        console.error('ç²å–ç†±é–€è¡Œç¨‹å¤±æ•—:', error);
        alert(`ç²å–å¤±æ•—: ${error.message}`);
      }
    } finally {
      setFetchingTours(false);
    }
  };

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  // å„²å­˜æ–°è¨­å®š
  const handleSaveSettings = () => {
    if (!settingName.trim()) {
      alert('è«‹è¼¸å…¥è¨­å®šåç¨±');
      return;
    }

    const newSetting = {
      id: Date.now(),
      name: settingName,
      data: formData,
      articles: generatedArticles,  // å„²å­˜æ‰€æœ‰å·²ç”Ÿæˆçš„æ–‡ç« 
      createdAt: new Date().toISOString()
    };

    const updatedList = [...savedSettings, newSetting];
    setSavedSettings(updatedList);
    localStorage.setItem('productLocationStorySettingsList', JSON.stringify(updatedList));

    setSettingName('');
    setShowSidebar(true);
    alert('è¨­å®šå·²å„²å­˜ï¼');
  };

  // è¼‰å…¥è¨­å®š
  const handleLoadSetting = (setting) => {
    setFormData(setting.data);
    setGeneratedArticles(setting.articles || []);  // è¼‰å…¥å·²ç”Ÿæˆçš„æ–‡ç« 
    setShowSidebar(false);
    alert(`å·²è¼‰å…¥è¨­å®šï¼š${setting.name}`);
  };

  // åˆªé™¤è¨­å®š
  const handleDeleteSetting = (id) => {
    if (!window.confirm('ç¢ºå®šè¦åˆªé™¤é€™å€‹è¨­å®šå—ï¼Ÿ')) return;

    const updatedList = savedSettings.filter(s => s.id !== id);
    setSavedSettings(updatedList);
    localStorage.setItem('productLocationStorySettingsList', JSON.stringify(updatedList));
    alert('è¨­å®šå·²åˆªé™¤');
  };

  // å¾ç¶²å€çˆ¬å–å•†å“è³‡è¨Š
  const handleScrapeUrl = async () => {
    if (!productUrl) {
      alert('è«‹è¼¸å…¥å•†å“ç¶²å€');
      return;
    }

    setScrapingUrl(true);
    try {
      const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';

      const response = await fetch(`${apiUrl}/api/product-location-story/scrape-url`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ url: productUrl })
      });

      const data = await response.json();

      if (data.success) {
        // è‡ªå‹•å¡«å…¥çˆ¬å–çš„å…§å®¹
        setFormData(prev => ({
          ...prev,
          productName: data.title || prev.productName,
          productInfo: data.content || prev.productInfo
        }));
        alert('ç¶²é å…§å®¹å·²è¼‰å…¥ï¼');
      } else {
        alert(data.message || 'çˆ¬å–å¤±æ•—');
      }
    } catch (error) {
      console.error('çˆ¬å–å¤±æ•—:', error);
      alert('çˆ¬å–å¤±æ•—ï¼Œè«‹æª¢æŸ¥ç¶²å€æ˜¯å¦æ­£ç¢º');
    } finally {
      setScrapingUrl(false);
    }
  };

  // ==================== æ–°å¢ï¼šStep 1 æ•´åˆåŠŸèƒ½çš„ Handler ====================

  // å„²å­˜ Step1 è¨­å®šçµ„åˆ
  const handleSaveStep1Config = () => {
    const configName = prompt('è«‹è¼¸å…¥è¨­å®šçµ„åˆåç¨±ï¼š');
    if (!configName) return;

    const savedConfig = {
      id: Date.now(),
      name: configName,
      config: step1Config,
      createdAt: new Date().toISOString()
    };

    const savedConfigs = JSON.parse(localStorage.getItem('step1Configs') || '[]');
    savedConfigs.push(savedConfig);
    localStorage.setItem('step1Configs', JSON.stringify(savedConfigs));

    alert(`è¨­å®šçµ„åˆã€Œ${configName}ã€å·²å„²å­˜ï¼`);
  };

  // AI è‡ªå‹•ç”Ÿæˆ Persona
  const handleAutoGeneratePersonas = async () => {
    if (!step1Config.productInfo) {
      alert('è«‹å…ˆè¼¸å…¥å•†å“è³‡è¨Š');
      return;
    }

    setLoading(true);
    const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';

    try {
      const response = await fetch(`${apiUrl}/api/personas/generate`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          productInfo: step1Config.productInfo
        })
      });

      const data = await response.json();

      if (data.success && data.personas) {
        const newPersonas = data.personas.map(p => ({
          ...p,
          id: `persona_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`
        }));

        setPersonas([...personas, ...newPersonas]);
        alert(`æˆåŠŸç”Ÿæˆ ${newPersonas.length} å€‹ Personaï¼`);
      } else {
        throw new Error(data.message || 'ç”Ÿæˆå¤±æ•—');
      }
    } catch (error) {
      console.error('AI ç”Ÿæˆ Persona å¤±æ•—:', error);
      alert(`ç”Ÿæˆå¤±æ•—: ${error.message}`);
    } finally {
      setLoading(false);
    }
  };

  // é–‹å§‹æ‰¹æ¬¡ç”Ÿæˆï¼ˆæ–°ç‰ˆï¼‰
  const handleStartGeneration = async () => {
    if (step1Config.selectedPersonas.length === 0) {
      alert('è«‹è‡³å°‘é¸æ“‡ä¸€å€‹ Persona');
      return;
    }
    if (step1Config.selectedTones.length === 0) {
      alert('è«‹è‡³å°‘é¸æ“‡ä¸€å€‹èªæ°£é¢¨æ ¼');
      return;
    }

    const totalArticles =
      step1Config.selectedPersonas.length *
      step1Config.selectedTones.length *
      step1Config.versionsPerCombo;

    if (!window.confirm(`å³å°‡ç”Ÿæˆ ${totalArticles} ç¯‡æ–‡ç« ï¼Œæ¯ç¯‡é… 5 å¼µåœ–ç‰‡ã€‚\né è¨ˆèŠ±è²»æ™‚é–“ç´„ ${Math.ceil(totalArticles * 30 / 60)} åˆ†é˜ã€‚\n\nç¢ºå®šè¦é–‹å§‹å—ï¼Ÿ`)) {
      return;
    }

    setLoading(true);
    const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';

    try {
      const response = await fetch(`${apiUrl}/api/content/multi-version`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          sourceType: step1Config.sourceType,
          productInfo: step1Config.productInfo,
          productName: step1Config.productName,
          productUrl: step1Config.productUrl,
          filter: step1Config.filter.enableFilter ? step1Config.filter : null,
          personaIds: step1Config.selectedPersonas,
          tones: step1Config.selectedTones,
          versionsPerCombo: step1Config.versionsPerCombo,
          characterSetting: step1Config.characterSetting,
          articleDirection: step1Config.articleDirection
        })
      });

      const data = await response.json();

      if (data.success) {
        alert(`æˆåŠŸç”Ÿæˆ ${data.totalGenerated} ç¯‡æ–‡ç« ï¼`);
        await loadArticlesFromSupabase();
        setStep(2);
      } else {
        throw new Error(data.message || 'ç”Ÿæˆå¤±æ•—');
      }
    } catch (error) {
      console.error('æ‰¹æ¬¡ç”Ÿæˆå¤±æ•—:', error);
      alert(`ç”Ÿæˆå¤±æ•—: ${error.message}`);
    } finally {
      setLoading(false);
    }
  };

  // Step 1: æ‰¹é‡ç”Ÿæˆæ–‡æ¡ˆ+åœ–ç‰‡
  const handleGenerateContent = async () => {
    setLoading(true);
    const articles = [];
    const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:4001';

    try {
      const count = parseInt(formData.articleCount) || 1;

      for (let i = 0; i < count; i++) {
        console.log(`æ­£åœ¨ç”Ÿæˆç¬¬ ${i + 1}/${count} ç¯‡æ–‡ç« ...`);

        // 1. ç”Ÿæˆæ–‡æ¡ˆ
        const contentResponse = await fetch(`${apiUrl}/api/product-location-story/generate-content`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ...formData, contentType })
        });

        const contentData = await contentResponse.json();
        if (!contentData.success) {
          alert(`ç¬¬ ${i + 1} ç¯‡æ–‡æ¡ˆç”Ÿæˆå¤±æ•—`);
          continue;
        }

        const content = contentData.content;

        // 2. ç”Ÿæˆåœ–ç‰‡ä¸¦å­˜å…¥ Supabase
        const imageResponse = await fetch(`${apiUrl}/api/product-location-story/generate-images`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            content,
            contentType,
            formData
          })
        });

        const imageData = await imageResponse.json();
        if (!imageData.success) {
          alert(`ç¬¬ ${i + 1} ç¯‡åœ–ç‰‡ç”Ÿæˆå¤±æ•—`);
          continue;
        }

        // 3. å„²å­˜é€™ç¯‡æ–‡ç« 
        articles.push({
          id: Date.now() + i,
          content,
          locations: imageData.locations || [],
          images: imageData.images || [],
          createdAt: new Date().toISOString()
        });

        console.log(`ç¬¬ ${i + 1}/${count} ç¯‡å®Œæˆ`);
      }

      if (articles.length > 0) {
        setGeneratedContent(articles[0].content);
        setLocations(articles[0].locations);
        setImages(articles[0].images);
        setStep(2);

        // é‡æ–°å¾ Supabase è¼‰å…¥æ‰€æœ‰æ–‡ç« 
        await loadArticlesFromSupabase();

        setShowLibrary(true);  // è‡ªå‹•æ‰“é–‹ Library
        alert(`æˆåŠŸç”Ÿæˆ ${articles.length} ç¯‡æ–‡ç« ï¼é»æ“Šå·¦å´ã€Œæ–‡ç« åº«ã€æŸ¥çœ‹æ‰€æœ‰æ–‡ç« `);
      } else {
        alert('æ‰€æœ‰æ–‡ç« ç”Ÿæˆå¤±æ•—ï¼Œè«‹é‡è©¦');
      }
    } catch (error) {
      console.error('ç”Ÿæˆå¤±æ•—:', error);
      alert('ç”Ÿæˆå¤±æ•—ï¼Œè«‹ç¨å¾Œå†è©¦');
    } finally {
      setLoading(false);
    }
  };

  // Step 2: å¾æ–‡æ¡ˆæå–åœ°é»ä¸¦ç”Ÿæˆåœ–ç‰‡
  const handleGenerateImages = async () => {
    setLoading(true);
    try {
      const token = localStorage.getItem('token');
      const apiUrl = process.env.REACT_APP_API_URL || 'http://localhost:3001';

      const response = await fetch(`${apiUrl}/api/product-location-story/generate-images`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({ content: generatedContent })
      });

      const data = await response.json();
      if (data.success) {
        setLocations(data.locations);
        setImages(data.images);
        setStep(3);
      } else {
        alert(data.message || 'ç”Ÿæˆåœ–ç‰‡å¤±æ•—');
      }
    } catch (error) {
      console.error('ç”Ÿæˆåœ–ç‰‡å¤±æ•—:', error);
      alert('ç”Ÿæˆåœ–ç‰‡å¤±æ•—ï¼Œè«‹ç¨å¾Œå†è©¦');
    } finally {
      setLoading(false);
    }
  };

  const resetForm = () => {
    setStep(1);
    setGeneratedContent('');
    setLocations([]);
    setImages([]);
    setGeneratedArticles([]);
    setFormData({
      productName: '',
      productInfo: '',
      productFeatures: '',
      articleCount: 1,
      characterSetting: ''
    });
  };

  return (
    <div className="min-h-screen bg-gray-50">
      {/* ç†±é–€è¡Œç¨‹ Modal */}
      {showTours && (
        <div className="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
          <div className="bg-white rounded-lg shadow-2xl max-w-6xl w-full max-h-[90vh] overflow-hidden flex flex-col">
            {/* Modal Header */}
            <div className="bg-gradient-to-r from-green-500 to-green-600 px-6 py-4 flex items-center justify-between">
              <div>
                <h2 className="text-2xl font-bold text-white">ç†±é–€è¡Œç¨‹</h2>
                <p className="text-green-100 text-sm mt-1">
                  {fetchingTours ? 'ğŸ”„ æ­£åœ¨çˆ¬å–æ˜“éŠç¶²å’Œæ±å—æ—…éŠ...ï¼ˆéœ€è¦ç´„ 1 åˆ†é˜ï¼Œè«‹è€å¿ƒç­‰å€™ï¼‰' : `å…± ${popularTours.length} å€‹è¡Œç¨‹`}
                </p>
              </div>
              <button
                onClick={() => setShowTours(false)}
                className="text-white hover:text-green-100 transition-colors"
              >
                <X className="w-6 h-6" />
              </button>
            </div>

            {/* Modal Content */}
            <div className="flex-1 overflow-y-auto p-6">
              {fetchingTours ? (
                <div className="flex flex-col items-center justify-center py-20">
                  <Loader2 className="w-16 h-16 text-green-600 animate-spin mb-4" />
                  <p className="text-lg text-gray-600">æ­£åœ¨çˆ¬å–ä¸¦æ•´ç†ç†±é–€è¡Œç¨‹...</p>
                  <p className="text-sm text-gray-400 mt-2">é€™å¯èƒ½éœ€è¦å¹¾ç§’é˜</p>
                </div>
              ) : popularTours.length === 0 ? (
                <div className="text-center py-20">
                  <p className="text-lg text-gray-500">æš«ç„¡è¡Œç¨‹è³‡æ–™</p>
                </div>
              ) : (
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {popularTours.map((tour, index) => (
                    <div
                      key={index}
                      className="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow"
                    >
                      <div className="flex items-start justify-between mb-2">
                        <h3 className="text-lg font-bold text-gray-900 flex-1">
                          {index + 1}. {tour.name}
                        </h3>
                        {tour.price && (
                          <span className="ml-2 px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold whitespace-nowrap">
                            {tour.price}
                          </span>
                        )}
                      </div>
                      <div className="space-y-2">
                        <div className="flex items-center gap-2 text-sm flex-wrap">
                          <MapPin className="w-4 h-4 text-blue-600" />
                          <span className="text-gray-700 font-medium">{tour.destination}</span>
                          <span className="px-2 py-1 bg-blue-50 text-blue-700 rounded text-xs">
                            {tour.type}
                          </span>
                          {tour.source && (
                            <span className="px-2 py-1 bg-purple-50 text-purple-700 rounded text-xs">
                              {tour.source}
                            </span>
                          )}
                        </div>
                        {tour.highlights && (
                          <p className="text-sm text-gray-600 leading-relaxed">
                            {tour.highlights}
                          </p>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>

            {/* Modal Footer */}
            <div className="bg-gray-50 px-6 py-4 flex items-center justify-between border-t border-gray-200">
              <p className="text-sm text-gray-500">
                è³‡æ–™ä¾†æºï¼šæ˜“éŠç¶²,æ±å—æ—…éŠ,  é›„ç…æ—…éŠ
              </p>
              <button
                onClick={() => setShowTours(false)}
                className="px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors"
              >
                é—œé–‰
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Full Page Library View */}
      {showLibrary ? (
        <div className="min-h-screen bg-gray-100">
          {/* Library Header */}
          <div className="bg-white border-b border-gray-200 sticky top-0 z-10 shadow-sm">
            <div className="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
              <div>
                <h1 className="text-2xl font-bold text-gray-900">æ–‡ç« åº«</h1>
                <p className="text-sm text-gray-600 mt-1">å…± {generatedArticles.length} ç¯‡æ–‡ç« </p>
              </div>
              <div className="flex items-center gap-3">
                {/* CSV Upload Section */}
                <div className="flex items-center gap-2">
                  <input
                    type="file"
                    id="csv-file-input"
                    accept=".csv"
                    onChange={handleFileSelect}
                    className="hidden"
                  />
                  <label
                    htmlFor="csv-file-input"
                    className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2 cursor-pointer text-sm font-medium"
                  >
                    <Upload className="w-4 h-4" />
                    é¸æ“‡ CSV
                  </label>
                  {selectedFile && (
                    <div className="flex items-center gap-2">
                      <span className="text-sm text-gray-600">{selectedFile.name}</span>
                      <button
                        onClick={handleUploadCSV}
                        disabled={uploading}
                        className="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed text-sm font-medium"
                      >
                        {uploading ? (
                          <>
                            <Loader2 className="w-4 h-4 animate-spin" />
                            ä¸Šå‚³ä¸­...
                          </>
                        ) : (
                          <>
                            <CheckCircle className="w-4 h-4" />
                            ä¸Šå‚³
                          </>
                        )}
                      </button>
                    </div>
                  )}
                </div>
                <button
                  onClick={() => setShowLibrary(false)}
                  className="px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors flex items-center gap-2"
                >
                  <X className="w-4 h-4" />
                  è¿”å›ç·¨è¼¯
                </button>
              </div>
            </div>
          </div>

          {/* Articles Grid */}
          <div className="max-w-7xl mx-auto px-6 py-8">
            {generatedArticles.length === 0 ? (
              <div className="text-center py-24 bg-white rounded-lg">
                <BookOpen className="w-16 h-16 text-gray-300 mx-auto mb-4" />
                <p className="text-lg text-gray-500">å°šæœªç”Ÿæˆæ–‡ç« </p>
                <p className="text-sm text-gray-400 mt-2">å¡«å¯«è¡¨å–®å¾Œé»æ“Šç”Ÿæˆ</p>
              </div>
            ) : (
              <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {generatedArticles.map((article, index) => (
                  <div
                    key={article.id}
                    className="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow"
                  >
                    {/* Article Header */}
                    <div className="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-4">
                      <h2 className="text-xl font-bold text-white">æ–‡ç«  #{index + 1}</h2>
                      <p className="text-blue-100 text-sm mt-1">
                        {new Date(article.createdAt).toLocaleString('zh-TW')}
                      </p>
                    </div>

                    {/* Article Content */}
                    <div className="p-6">
                      <div className="prose max-w-none">
                        <div className="text-gray-800 leading-relaxed whitespace-pre-wrap text-base">
                          {article.content}
                        </div>
                      </div>
                    </div>

                    {/* Article Images */}
                    {article.images && article.images.length > 0 && (
                      <div className="px-6 pb-6">
                        <h3 className="text-lg font-semibold text-gray-900 mb-4">åœ°é»åœ–ç‰‡ ({article.images.length} å¼µ)</h3>
                        <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
                          {article.images.map((image, imgIndex) => (
                            <div key={imgIndex} className="relative group">
                              <img
                                src={image.supabaseUrl}
                                alt={`åœ°é» ${imgIndex + 1}`}
                                className="w-full h-40 object-cover rounded-lg border border-gray-200 shadow-sm group-hover:shadow-md transition-shadow"
                              />
                              <div className="absolute bottom-2 left-2 right-2 bg-black bg-opacity-75 text-white text-xs px-2 py-1 rounded text-center truncate">
                                {image.location}
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      ) : (
        <div className="flex-1 min-w-0">
        {/* Header */}
        <div className="bg-white border-b border-gray-200 sticky top-0 z-10">
          <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div className="flex items-center justify-between">
              <div className="flex items-center space-x-3">
                <button
                  onClick={() => setShowLibrary(!showLibrary)}
                  className="flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-sm font-medium"
                >
                  <BookOpen className="w-4 h-4 mr-2" />
                  æ–‡ç« åº« ({generatedArticles.length})
                </button>
                <button
                  onClick={handleFetchPopularTours}
                  disabled={fetchingTours}
                  className="flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors text-sm font-medium disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  {fetchingTours ? (
                    <>
                      <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                      çˆ¬å–ä¸­...
                    </>
                  ) : (
                    <>
                      <Sparkles className="w-4 h-4 mr-2" />
                      ç†±é–€è¡Œç¨‹
                    </>
                  )}
                </button>
                <div>
                  <h1 className="text-2xl font-bold text-gray-900">å•†å“åœ°é»æ•…äº‹ç”Ÿæˆå™¨</h1>
                  <p className="text-sm text-gray-600 mt-1">AI æ™ºèƒ½ç”Ÿæˆå•†å“æ•…äº‹èˆ‡åœ°é»åœ–ç‰‡</p>
                </div>
              </div>
              <div className="flex items-center space-x-3">
                {step > 1 && (
                  <button
                    onClick={resetForm}
                    className="flex items-center text-gray-600 hover:text-gray-900 transition-colors"
                  >
                    <RotateCcw className="w-4 h-4 mr-1" />
                    <span className="text-sm">é‡ç½®</span>
                  </button>
                )}
              </div>
            </div>
          </div>
        </div>

      {/* Progress Steps */}
      <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div className="flex items-center justify-center space-x-4">
          <div className={`flex items-center ${step >= 1 ? 'text-gray-900' : 'text-gray-400'}`}>
            <div className={`w-10 h-10 rounded-full flex items-center justify-center font-semibold ${step >= 1 ? 'bg-gray-900 text-white' : 'bg-gray-200 text-gray-500'}`}>
              1
            </div>
            <span className="ml-2 text-sm font-medium hidden sm:inline">è¼¸å…¥è³‡è¨Š</span>
          </div>
          <div className={`w-12 h-0.5 ${step >= 2 ? 'bg-gray-900' : 'bg-gray-300'}`}></div>
          <div className={`flex items-center ${step >= 2 ? 'text-gray-900' : 'text-gray-400'}`}>
